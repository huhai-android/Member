<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_activity"
    android:background="@color/activity_bg">

    <LinearLayout
        android:id="@+id/device_connect_all_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_titlebar" />

        <RelativeLayout
            android:layout_width="@dimen/dp_245"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_65"
            android:background="@mipmap/care_iphonex"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/connect_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_120"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@mipmap/care_bluetooth"
                    />

                <ImageView
                    android:id="@+id/connecting_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@mipmap/care_equipment"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/connect_ll"
                android:layout_marginTop="@dimen/dp_55"
                android:text="@string/device_connect_connecting_tip_string"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/theme"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="360dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>