<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_81"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/monitor_setting_rl"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/device_connect_monitor_setting_string"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                />

        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/font_gray_5"
            />

        <RelativeLayout
            android:id="@+id/guide_rl"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/device_connect_guide_string"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>