<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/guide_mobile_bg">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_58"
                android:gravity="center_horizontal"
                android:text="@string/guide_operate_11_string"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@mipmap/guide_mobile" />

                <ImageView
                    android:id="@+id/guide_line_right_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:layout_marginTop="@dimen/dp_165"
                    android:background="@mipmap/guide_line_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guide_line_right_iv"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:text="@string/guide_operate_19_string"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:padding="@dimen/dp_25">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_heart_close" />
        </LinearLayout>



</RelativeLayout>
