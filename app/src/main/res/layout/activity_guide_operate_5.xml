<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/guide_mobile_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_58"
            android:gravity="center_horizontal"
            android:text="@string/guide_operate_20_string"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_27">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/guide_mobile_1" />

            <ImageView
                android:id="@+id/guide_line_left_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_210"
                android:layout_marginRight="@dimen/dp_86"
                android:background="@mipmap/guide_line_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/guide_line_left_iv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_56"
                android:text="@string/guide_operate_21_string"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_15"
        android:padding="@dimen/dp_25">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_heart_close" />
    </LinearLayout>

</RelativeLayout>