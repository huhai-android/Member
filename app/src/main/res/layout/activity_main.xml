<?xml version="1.0" encoding="utf-8"?>

<com.newdjk.member.views.FitWindowLayoutV2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/sv_activity"
        android:fillViewport="true"
        android:scrollbars="none">


        <com.newdjk.member.views.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/include1" />

        <!--底部菜单Bar-->
        <include
            android:id="@+id/include1"
            layout="@layout/layout_bottombars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_1" />


    </RelativeLayout>
</com.newdjk.member.views.FitWindowLayoutV2>