<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/ll_activity"
        android:background="@color/activity_bg">

        <include layout="@layout/layout_home_titlebar" />


        <com.newdjk.member.views.VpSwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.youth.banner.Banner
                        android:id="@+id/mBanner"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                    <ImageView
                        android:id="@+id/mFomusDoctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_home_man" />

                    <ImageView
                        android:id="@+id/mIntroduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/img_home_zhenliao" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@color/activity_bg" />

                    <include
                        layout="@layout/home_item1"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@color/activity_bg"
                        android:visibility="gone" />

                    <include
                        layout="@layout/home_item2"
                        android:visibility="gone" />


                    <include layout="@layout/layout_home_tab" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@color/activity_bg" />

                    <ImageView
                        android:id="@+id/mFetailHeart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_fetalt_heart" />

                    <LinearLayout
                        android:id="@+id/mHotServiceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginBottom="1px"
                            android:background="@color/white"
                            android:paddingRight="@dimen/dp_8">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:text="/ / / /"
                                    android:textColor="#ffa416"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="热门服务"
                                    android:textColor="@color/font_gray_3"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:text="/ / / /"
                                    android:textColor="#ffa416"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_160"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/mAdOne"
                                android:layout_width="@dimen/dp_180"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1px"
                                android:scaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/mAdTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_80"
                                    android:layout_marginBottom="1px"
                                    android:scaleType="fitXY" />

                                <ImageView
                                    android:id="@+id/mAdThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_80"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mDoctorContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginBottom="1px"
                            android:background="@color/white"
                            android:paddingRight="@dimen/dp_8">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:text="/ / / /"
                                    android:textColor="#3069cf"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="名医推荐"
                                    android:textColor="@color/font_gray_3"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:text="/ / / /"
                                    android:textColor="#3069cf"
                                    android:textSize="16sp" />
                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawablePadding="@dimen/dp_4"
                                android:drawableRight="@drawable/ic_right"
                                android:text="更多"

                                android:textColor="@color/font_gray_3"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/mRecommendFamousDoctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_4"
                            android:paddingTop="@dimen/dp_5" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mNurseContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginBottom="1px"
                            android:background="@color/white"
                            android:paddingRight="@dimen/dp_8">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:text="/ / / /"
                                    android:textColor="#fb988e"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="金牌护士"
                                    android:textColor="@color/font_gray_3"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:text="/ / / /"
                                    android:textColor="#fb988e"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_5"
                                android:drawablePadding="@dimen/dp_4"
                                android:drawableRight="@drawable/ic_right"
                                android:text="更多"
                                android:textColor="@color/font_gray_3"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/mRecommendFamousBurse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_4"
                            android:paddingTop="@dimen/dp_5" />
                    </LinearLayout>
                </LinearLayout>
                <!--</ru.noties.scrollable.ScrollableLayout>-->
            </android.support.v4.widget.NestedScrollView>


        </com.newdjk.member.views.VpSwipeRefreshLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/customer_button"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:src="@drawable/icon_online_customer" />
</FrameLayout>