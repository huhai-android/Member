<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.newdjk.member.views.CircleImageView
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/icon_patient"
        android:id="@+id/civImg"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48" />



    <LinearLayout
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蒋一蓓"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_sex_age"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24岁"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_default"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:background="@drawable/min_patient_default"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认"
            android:textColor="#fff7b500"
            android:textSize="12sp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_patient"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:background="@drawable/min_patient_info"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看病历档案"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        />


</LinearLayout>