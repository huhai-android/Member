<?xml version="1.0" encoding="utf-8"?><!--头部菜单-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liear_titlebar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relat_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/white"
            android:text="深圳"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="3"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />




        <ImageView
            android:id="@+id/top_right"
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@color/tm"
            android:padding="@dimen/dp_12"
            android:src="@drawable/icon_scan"
            android:visibility="visible" />

        <TextView
            android:id="@+id/et_patient_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:text="@string/home_et_hint"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/tv_left"
            android:background="@drawable/home_edit_bg"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/top_right" />


    </RelativeLayout>
</LinearLayout>